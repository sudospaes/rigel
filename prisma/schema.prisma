// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model User {
  id       String  @id @unique
  role     Role    @default(USER)
  username String?
}

model Session {
  key   String @id @unique
  value String
}

enum Role {
  USER
  ADMIN
}
